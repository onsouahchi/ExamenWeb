{% extends 'base.html.twig' %}

{% block title %}Hello EtudiantsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des Etudiants! ✅</h1>

    <a href="{{path("add_etudiants")}}"> Ajouter des Etudiants</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">First name</th>
            <th scope="col">name</th>
            <th scope="col">section</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {%for p in list%}
            <tr>
                <td>{{ p.prenom }}</td>
                <td>{{ p.nom }}</td>
                <td>{%if p.section%}{{ p.section.designation }}
                {%else%} Etudiant non encore affecté à une section
                    {%endif%}</td>
                <td><a href="{{path("add_etudiants", p.id)}}">Edit</a> <a href="{{path("delete_etudiant")}}">delete</a> </td>
            </tr>
        {%endfor%}
        </tbody>
    </table>
</div>
{% endblock %}
